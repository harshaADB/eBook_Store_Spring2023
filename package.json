		"@mantine/dates": "^5.8.2",
		"@mantine/hooks": "^5.8.2",
		"@mantine/modals": "^5.8.2",
		"@mantine/notifications": "^5.8.2",
		"@mantine/remix": "^5.8.2",
		"@prisma/client": "^4.6.1",
		"@remix-run/node": "^1.7.6",
		"@remix-run/react": "^1.7.6",
		"@remix-run/vercel": "^1.7.6",
		"@types/react-input-mask": "^3.0.2",
