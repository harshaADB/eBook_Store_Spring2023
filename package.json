		"react-pdf": "^6.2.0",
		"react-player": "^2.11.0",
		"tiny-invariant": "^1.3.1",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.7.6",
		"@remix-run/eslint-config": "^1.7.6",
		"@remix-run/serve": "^1.7.6",
